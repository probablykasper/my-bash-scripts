#! /bin/bash

if [[ $2 == '' ]]; then

	SCRIPTNAME=${0##*/}

	# Colors
	GREEN='\033[0;32m'
	RESET='\033[0m'

	echo    ""
	echo -e "${GREEN}$SCRIPTNAME${RESET}"
	echo -e "usage: $SCRIPTNAME <username> <directory>"
	echo    ""
else

	USERNAME=$1
	DIR=$2
	sudo chmod -RN "${DIR}" && sudo chown -R ${USERNAME} "${DIR}" && sudo chmod -R 755 "${DIR}"

fi
