#! /bin/bash

help() {
	SCRIPTNAME=${0##*/}
  echo "Update all file extensions in a directory using `color 3 git mv`"
  echo ""
  echo "`color 2 Usage:` $SCRIPTNAME <username> <directory>"
	echo ""
}

if [[ "$2" == '' ]]; then
	help
else

	USERNAME=$1
	DIR=$2
	sudo chmod -RN "${DIR}" && sudo chown -R ${USERNAME} "${DIR}" && sudo chmod -R 755 "${DIR}"

fi
