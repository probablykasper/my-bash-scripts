#! /bin/bash

color() {
    echo -n "`tput setaf $1`${@:2}"
    # reset color if there are arguments:
    if [[ "$#" > 1 ]]; then echo -n "`tput sgr0`"; fi
}
red() { color 1 "$@"; }
green() { color 2 "$@"; }
yellow() { color 3 "$@"; }
cyan() { color 6 "$@"; }
reset() { color 7 "$@"; echo -n `tput sgr0`; }

SCRIPTNAME=${0##*/}

help() {
  echo ""
  echo "`yellow $SCRIPTNAME`"
  echo "    Types out your clipboard."
  echo ""
}

ARG1="$1"
if [[ $ARG1 == "--help" || $ARG1 == "-h" ]]; then
	help
else
	osascript -e 'tell application "System Events" to keystroke the clipboard as text'
fi


