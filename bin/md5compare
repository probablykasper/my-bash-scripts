#!/bin/bash

color() {
    echo -n "`tput setaf $1`${@:2}"
    # reset color if there are arguments:
    if [[ "$#" > 1 ]]; then echo -n "`tput sgr0`"; fi
}
red() { color 1 "$@"; }
green() { color 2 "$@"; }
cyan() { color 6 "$@"; }
reset() { color 7 "$@"; echo -n `tput sgr0`; }

FILE_1="$1"
FILE_2="$2"

if [[ $FILE_1 ]] && [[ $FILE_2 ]]; then
  MD5_1="$(md5 -q "$FILE_1")"
  MD5_2="$(md5 -q "$FILE_2")"
  echo `cyan File 1:` $MD5_1
  echo `cyan File 2:` $MD5_2
  if [[ $MD5_1 == $MD5_2 ]]; then
    echo "`green Match`"
  else
    echo "`red Mismatch`"
  fi

else

  SCRIPTNAME=${0##*/}
  echo "`green Usage:` $SCRIPTNAME <file1> <file2>"

fi
