#! /bin/bash

color() {
    echo -n "`tput setaf $1`${@:2}"
    # reset color if there are arguments:
    if [[ "$#" > 1 ]]; then echo -n "`tput sgr0`"; fi
}
red() { color 1 "$@"; }
green() { color 2 "$@"; }
yellow() { color 3 "$@"; }
cyan() { color 6 "$@"; }
reset() { color 7 "$@"; echo -n `tput sgr0`; }

ARG1="$1"

SCRIPT_PATH="${BASH_SOURCE[0]}"
BIN_PATH="`dirname "$SCRIPT_PATH"`"
TOP_PATH="`dirname "$BIN_PATH"`"
SOUNDS_PATH="$TOP_PATH/sounds"

if [[ $ARG1 == 'ding' ]]; then
  afplay "$SOUNDS_PATH/Ding.mp3"
elif [[ $ARG1 == 'beep' ]]; then
  afplay "$SOUNDS_PATH/Beep.mp3"
else
  SCRIPTNAME=${0##*/}
  echo ""
  echo "`green $SCRIPTNAME:`"
  echo "    Play a sound effect. Example: `yellow $SCRIPTNAME ding`."
  echo ""
  echo "`green Usage:`"
  echo "    $SCRIPTNAME <sound>"
  echo ""
  echo "`green Sounds:`"
  echo "    ding beep"
  echo ""
# Example: copy pwd"

fi
